  </main>

  <script>
    // ---- BASIC PRODUCT DATA (edit this for your real items) ----
    const products = [
      {
        id: 'prod-1',
        name: 'Signature Hoodie',
        desc: 'Soft, heavyweight hoodie with your shop logo.',
        price: 59.99,
        tag: 'New',
        stock: 'In stock',
        image: 'https://images.pexels.com/photos/7671166/pexels-photo-7671166.jpeg?auto=compress&cs=tinysrgb&w=1200',
        buyLink: '#checkout-hoodie' // later: replace with real Stripe/Square/Shopify link
      },
      {
        id: 'prod-2',
        name: 'Premium T-Shirt',
        desc: 'Everyday tee, ultra soft cotton blend.',
        price: 29.99,
        tag: 'Best seller',
        stock: 'In stock',
        image: 'https://images.pexels.com/photos/7671214/pexels-photo-7671214.jpeg?auto=compress&cs=tinysrgb&w=1200',
        buyLink: '#checkout-shirt'
      },
      {
        id: 'prod-3',
        name: 'Gift Card',
        desc: 'Let them choose their favorite items.',
        price: 50.00,
        tag: 'Great gift',
        stock: 'Digital delivery',
        image: 'https://images.pexels.com/photos/1888009/pexels-photo-1888009.jpeg?auto=compress&cs=tinysrgb&w=1200',
        buyLink: '#checkout-giftcard'
      },
      {
        id: 'prod-4',
        name: 'Limited Edition Item',
        desc: 'Small batch, exclusive to your store.',
        price: 79.00,
        tag: 'Limited',
        stock: 'Low stock',
        image: 'https://images.pexels.com/photos/298864/pexels-photo-298864.jpeg?auto=compress&cs=tinysrgb&w=1200',
        buyLink: '#checkout-limited'
      }
    ];

    const productsGrid = document.getElementById('productsGrid');
    const cartOverlay = document.getElementById('cartOverlay');
    const openCartBtn = document.getElementById('openCart');
    const closeCartBtn = document.getElementById('closeCart');
    const cartCount = document.getElementById('cartCount');
    const cartItemsEl = document.getElementById('cartItems');
    const cartSubtotalEl = document.getElementById('cartSubtotal');
    const checkoutBtn = document.getElementById('checkoutBtn');

    let cart = [];

    function renderProducts() {
      productsGrid.innerHTML = '';
      products.forEach((p) => {
        const card = document.createElement('article');
        card.className = 'product-card';

        card.innerHTML = `
          <div class="product-image" style="background-image:url('${p.image}')">
            <div class="product-tag">${p.tag}</div>
          </div>
          <div class="product-body">
            <div class="product-name">${p.name}</div>
            <div class="product-desc">${p.desc}</div>
            <div class="product-meta-row">
              <div class="product-price">$${p.price.toFixed(2)} <span>USD</span></div>
              <div class="product-stock">${p.stock}</div>
            </div>
            <div class="product-actions">
              <button class="btn-add" data-id="${p.id}">
                <span>+</span> Add to cart
              </button>
              <a href="${p.buyLink}" class="btn-buy">Buy now</a>
            </div>
          </div>
        `;
        productsGrid.appendChild(card);
      });

      // Attach listeners for Add to cart
      document.querySelectorAll('.btn-add').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-id');
          addToCart(id);
        });
      });
    }

    function addToCart(productId) {
      const existing = cart.find(item => item.id === productId);
      if (existing) {
        existing.qty += 1;
      } else {
        const product = products.find(p => p.id === productId);
        if (product) {
          cart.push({ id: product.id, name: product.name, price: product.price, qty: 1 });
        }
      }
      updateCartUI();
      openCart();
    }

    function updateCartUI() {
      const totalItems = cart.reduce((sum, item) => sum + item.qty, 0);
      const subtotal = cart.reduce((sum, item) => sum + item.price * item.qty, 0);

      cartCount.textContent = totalItems;
      cartSubtotalEl.textContent = `$${subtotal.toFixed(2)}`;

      if (cart.length === 0) {
        cartItemsEl.innerHTML = '<div class="cart-empty">Your cart is empty. Add some items from the shop to get started.</div>';
        return;
      }

      cartItemsEl.innerHTML = '';
      cart.forEach(item => {
        const row = document.createElement('div');
        row.className = 'cart-item';
        row.innerHTML = `
          <div>
            <div class="cart-item-name">${item.name}</div>
            <div class="cart-item-meta">$${item.price.toFixed(2)} each</div>
          </div>
          <div class="cart-item-actions">
            <button class="qty-btn" data-id="${item.id}" data-action="decrease">âˆ’</button>
            <span class="qty">${item.qty}</span>
            <button class="qty-btn" data-id="${item.id}" data-action="increase">+</button>
            <button class="cart-remove" data-id="${item.id}">Remove</button>
          </div>
        `;
        cartItemsEl.appendChild(row);
      });

      // Bind qty + remove actions
      cartItemsEl.querySelectorAll('.qty-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-id');
          const action = btn.getAttribute('data-action');
          if (action === 'increase') changeQty(id, 1);
          if (action === 'decrease') changeQty(id, -1);
        });
      });

      cartItemsEl.querySelectorAll('.cart-remove').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-id');
          removeItem(id);
        });
      });
    }

    function changeQty(id, delta) {
      const item = cart.find(i => i.id === id);
      if (!item) return;
      item.qty += delta;
      if (item.qty <= 0) {
        cart = cart.filter(i => i.id !== id);
      }
      updateCartUI();
    }

    function removeItem(id) {
      cart = cart.filter(i => i.id !== id);
      updateCartUI();
    }

    function openCart() {
      cartOverlay.classList.add('cart-overlay--open');
    }

    function closeCart() {
      cartOverlay.classList.remove('cart-overlay--open');
    }

    // Basic event bindings
    openCartBtn.addEventListener('click', openCart);
    closeCartBtn.addEventListener('click', closeCart);
    cartOverlay.addEventListener('click', (e) => {
      if (e.target === cartOverlay) closeCart();
    });

    checkoutBtn.addEventListener('click', () => {
      // Later: redirect to your actual checkout URL
      // For now, just log and show an alert
      if (cart.length === 0) {
        alert('Your cart is empty.');
        return;
      }
      alert('In production, this button would send you to Stripe/Square/Shopify checkout with your cart items.');
      // window.location.href = 'https://your-real-checkout-link.com';
    });

    // Set footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Initial render
    renderProducts();
    updateCartUI();
  </script>
</body>
</html>
